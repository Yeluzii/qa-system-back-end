<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.ychen.qasystem.mapper.UserMapper">
    <resultMap id="userResultMap" type="top.ychen.qasystem.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>
    <select id="findUserId" resultType="java.lang.Integer">
        SELECT id
        FROM users
        WHERE username = #{username}
    </select>
    <select id="findUserByUsername" resultMap="userResultMap">
        SELECT *
        FROM users
        WHERE username = #{username}
    </select>
    <select id="findUserById" resultMap="userResultMap">
        SELECT u.id,u.username,u.created_at,u.avatar
        FROM users u
        WHERE id = #{id}
    </select>

    <insert id="insertUser" parameterType="top.ychen.qasystem.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users(username, password, email)
        VALUES (#{username}, #{password}, #{email})
    </insert>
</mapper>